programa FactorialIterativo {
  funcion operacion_factorial (numero, contador, factorial) {
    mientras (contador < numero) {
      factorial[contador] = factorial[contador] * factorial[contador-1];
      contador = contador + 1;
    }
    regresa factorial;
  }

  funcion origen {
    var factorial = [1];
    var contador = 1;
    mientras (cierto) {
      escribe("Escribe un nÃºmero factorial");
      var numero = lee();
      si (factorial[numero] == nulo) {
        factorial = operacion_factorial(numero, contador, factorial);
        si(numero >= contador) {
          contador = numero;
        }
        pero si no {
          contador = contador + 1;
        }
      }
      escribe("Resultado: " + factorial[numero]);
    }
  }
}