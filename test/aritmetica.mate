/*
* Programa que pide 3 números, los suma, multiplica, resta y despliega resultados
*/
modulo Aritmetica {
    // regresa la multiplicación de los elementos del arreglo
    funcion multiplica(x) {
        var resultado = 1;
        var cuenta = 0;
        mientras(cuenta < 3) {
            resultado = resultado * x[cuenta];
            cuenta = cuenta + 1;
        }
        regresa resultado;
    }
    // regresa la resta de los elementos del arreglo
    funcion resta(x) {
        var resultado = x[0];
        var cuenta = 0;
        mientras(cuenta < 2) {
            cuenta = cuenta + 1;
            resultado = resultado - x[cuenta];
        }
        regresa resultado;
    }
    // regresa la suma de los elementos del arreglo
    funcion suma(x) {
        var resultado = 0;
        var cuenta = 0;
        mientras(cuenta < 3) {
            resultado = resultado + x[cuenta];
            cuenta = cuenta + 1;
        }
        regresa resultado;
    }
    funcion origen {
        var x = [];
        escribe("Escribe tres numeros");
        x[0] = lee();
        x[1] = lee();
        x[2] = lee();
        escribe(suma(x));
        escribe(resta(x));
        escribe(multiplica(x));
    }
}