require 'rspec/core/rake_task'

RSpec::Core::RakeTask.new do |c|
  options = ['--color']
  options += ["--format", "documentation"]
  c.rspec_opts = options
end

desc "Generate Lexer"
task :lexer do
  `rex src/lex.rex -o build/lexerino.rb`
end

desc "Generate Parser"
task :parser do
  `racc -v src/parser.y -o build/parserino.rb`
end

desc "Generate Lexer and Parser"
task :generate => [:lexer, :parser]

desc "Cleeeean"
task :clean do
  `rm -rf build && mkdir build`
end

desc "Running test"
task :test do
  require './build/parserino'
  sourceCode = Mate.new
  sourceCode.parse('test/app.mate')
end